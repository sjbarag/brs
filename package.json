{
  "name": "brs-emu",
  "version": "0.2.0",
  "description": "An emulator for the BrightScript 2D API that runs on Chromium based browsers.",
  "author": "Marcelo Lv Cabral <marcelo@lvcabral.com> (https://lvcabral.com/)",
  "contributors": [
    "Sean Barag <sean@barag.org>"
  ],
  "license": "MIT",
  "main": "lib/brsEmu.js",
  "typings": "./types/index.d.ts",
  "bin": {
    "brs-lib": "./index.html"
  },
  "scripts": {
    "build": "webpack --env.NODE_ENV=development",
    "release": "webpack --env.NODE_ENV=production --env.production",
    "clean": "rimraf ./lib ./types",
    "test": "tsc && jest",
    "lint": "tslint --project .",
    "prettier:write": "prettier --write \"{bin,src,test}/**/*.{js,ts}\"",
    "prettier": "prettier --check \"{bin,src,test}/**/*.{js,ts}\"",
    "prepublishOnly": "npm-run-all --serial clean build lint prettier test"
  },
  "files": [
    "bin/",
    "lib/",
    "types/"
  ],
  "dependencies": {
    "crc": "^3.8.0",
    "fast-png": "^4.0.1",
    "linked-list-typescript": "^1.0.15",
    "long": "^3.2.0",
    "luxon": "^1.8.3",
    "memory-fs": "^0.4.1",
    "nanomatch": "^1.2.13",
    "opentype.js": "^1.1.0",
    "p-settle": "^2.1.0",
    "path-parse": "^1.0.6",
    "ts-loader": "^6.0.4",
    "url-parse": "^1.4.7",
    "webpack": "^4.39.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/crc": "^3.4.0",
    "@types/css-font-loading-module": "^0.0.2",
    "@types/jest": "^23.3.13",
    "@types/lolex": "^2.1.3",
    "@types/long": "^3.0.32",
    "@types/luxon": "^1.4.1",
    "@types/memory-fs": "^0.3.2",
    "@types/node": "^8.10.52",
    "@types/opentype.js": "^0.7.2",
    "@types/p-settle": "^2.0.1",
    "@types/path-parse": "^1.0.19",
    "@types/url-parse": "^1.4.3",
    "@types/xml2js": "^0.4.4",
    "husky": ">=1",
    "jest": "^24.0.0",
    "jest-junit": "^6.1.0",
    "lint-staged": ">=8",
    "lolex": "^3.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.17.0",
    "raw-loader": "^3.1.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3",
    "webpack-cli": "^3.3.6"
  },
  "repository": "https://github.com/lvcabral/brs-emu",
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
